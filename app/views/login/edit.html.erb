
<% if current_user.present? %>
    <% @user = current_user %>
    <div class="loginColumns animated fadeInDown" style="padding-top:1%;padding-bottom:0%;">
      <%= render :partial => 'shared/notification' %>
      <div class="row">
        <div class="col-md-12">
          <div class="ibox-content">
            <div><h3>Update Personal Profile</h3> </div>
            <div class="hr-line-dashed"></div>
            <%= form_for @user, :url => url_for(:controller => 'login', :action => 'update'),:html => {:id => 'submit_user'} do |f| %>

                <div class="form-group">
                  <%= f.text_field :first_name,:value => @user.first_name,:class => 'form-control',:placeholder => "Enter Name",:maxlength => 150, :required => true 	%>
                </div>

                <div class="form-group">
                  <%= f.text_field :email,:value => @user.email,:class => 'form-control',:placeholder => "Enter Email",:maxlength => 150, :required => true, readonly: true 	%>
                </div>

                <div class="form-group">
                  <%= f.text_field :mobile,:value => @user.mobile,:class => 'form-control',:placeholder => "Enter Mobile",:maxlength => 10, :required => true 	%>
                </div>

                <div class="form-group">
                  <%= f.text_field :mailchimp_api_key,:value => @user.mailchimp_api_key,:class => 'form-control',:placeholder => "Enter Mailchimp APIKEY",:maxlength => 200, :required => true   %>
                </div>

                <div class="form-group">
                  <%= f.text_field :mailchimp_list_id,:value => @user.mailchimp_list_id,:class => 'form-control',:placeholder => "Enter Mailchimp LIST ID",:maxlength => 150, :required => true   %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password,:class => 'form-control',:placeholder => "Update Password",:maxlength => 150, :required => true 	%>
                </div>

                <button type="submit" class="btn btn-w-m btn-success block full-width m-b">
                  Update
                </button>

                <p class="text-muted text-center"></p>

            <% end %>
          </div>
        </div>
      </div>
      <hr />

    </div>

<% end %>
