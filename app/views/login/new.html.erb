
<% unless current_user.present? %>

    <div class="loginColumns animated fadeInDown" style="padding-top:1%;padding-bottom:0%;">
      <%= render :partial => 'shared/notification' %>
      <div class="row">
        <%= render :partial => 'shared/login_left_panel' %>

        <div class="col-md-6">
          <div class="ibox-content">
            <div><h3>Become a Member</h3> </div>
            <div class="hr-line-dashed"></div>
            <%= form_for @user, :url => url_for(:controller => 'login', :action => 'sign_up'),:html => {:id => 'submit_user'} do |f| %>

                <div class="form-group">

                  <%= f.text_field :first_name,:value => @user.first_name,:class => 'form-control',:placeholder => "Enter Name",:maxlength => 150, :required => true 	%>

                </div>


                <div class="form-group">
                  <%= f.text_field :email,:value => @user.email,:class => 'form-control',:placeholder => "Enter Email",:maxlength => 150, :required => true 	%>
                </div>

                <div class="form-group">
                  <%= f.text_field :mobile,:value => @user.mobile,:class => 'form-control',:placeholder => "Enter Mobile",:maxlength => 10, :required => true 	%>
                </div>

                <div class="form-group">
                  <%= f.select("role_id", User::ROLES, { },{:class => 'form-control'}) 	%>
                </div>

                <div class="form-group">
                  <%= f.password_field :password,:class => 'form-control',:placeholder => "Enter Password",:maxlength => 150, :required => true 	%>
                </div>


                <div class="form-group">
                  <%= f.password_field :password_confirmation,:class => 'form-control',:placeholder => "Enter Confirm Password",:maxlength => 150, :required => true 	%>
                </div>


                <button type="submit" class="btn btn-w-m btn-success block full-width m-b">
                  Submit
                </button>

                <p class="text-muted text-center"></p>

            <% end %>
            <p class="m-t"></p>
            <a class="btn btn-sm btn-white btn-block" href="<%= root_url %>">Already Member? Login</a>
          </div>
        </div>
      </div>
      <hr />

    </div>

<% end %>
