<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Errors / Exceptions</h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
      	<div class="ibox-title">
            <h5>Errors List</h5>
            <div class="ibox-tools">
               <%= link_to 'Delete All Errors', delete_errors_syncing_errors_path, :class => "btn btn-w-m btn-primary", :title => "Delete All Errors"%>
            </div>
        </div>
        <div class="ibox-content">
          <%= render :partial => "shared/notifier"%>
          <% if @errors.present? %>
              <%= will_paginate @errors , renderer: BootstrapPagination::Rails %>
              <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                <tr>
                  <th>Error Type</th>
                  <th>Description</th>
                  <th>Created Date</th>
                  <th>Status</th>
                </tr>
                </thead>
                <tbody>
                <% @errors.each do |error| %>
                    <tr>
                      <td>
                        <%= error.error_type %>
                      </td>
                      <td>
                        <%= error.description %>
                      </td>
                      <td>
                        <%= error.created_at.strftime('%d %B, %Y') %>
                      </td>
                      <td>
                        <%= error.status %>
                      </td>                    
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <div class="alert alert-danger" style="text-align: center;"> Yayy!!! No Errors Generated yet!</div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


</div>

