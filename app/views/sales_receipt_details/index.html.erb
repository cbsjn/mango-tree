<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Sales Receipt Items</h2>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
      	<div class="ibox-title">
           <h5>Sales Receipt Items List</h5>
            <div class="ibox-tools">
               <%= link_to 'Create New Sales Receipt Item',new_sales_receipt_detail_path, :class => "btn btn-w-m btn-primary", :title => "Add Sales Receipt Items"%>
               <%= link_to 'Back To Sales Receipt',sales_receipts_path, :class => "btn btn-w-m btn-warning", :title => "Back To Sales Receipt"%>
            </div>
        </div>
        <div class="ibox-content">
		      <%= render :partial => "shared/notifier"%>
          <% if @sales_receipt_details.present? %>
              <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                <thead>
                <tr>
                  <th>Item Name</th>
                  <th>Description</th>
                  <th>Quantity</th>
                  <th>Rate</th>
                  <th>Amount</th>
                  <th class="text-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @sales_receipt_details.each do |sales_receipt_detail| %>
                    <tr>
                      <td>
                        <%= sales_receipt_detail.item&.name %>
                      </td>
                      <td>
                        <%= sales_receipt_detail.product_description %>
                      </td>
                      <td>
                        <%= sales_receipt_detail.qty %>
                      </td>
                      
                      <td>
                        <%= sales_receipt_detail.rate %>
                      </td>
                      <td>
                        <%= sales_receipt_detail.amt %>
                      </td>
                   
                      <td class="project-actions">
                        <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe,edit_sales_receipt_detail_path(sales_receipt_detail),:class => 'btn btn-white btn-sm'%>
                        
                        <%= link_to '<i class="fa fa-trash-o"></i> Destroy'.html_safe,sales_receipt_detail_path(sales_receipt_detail),  :method => 'delete', :class => 'btn btn-white btn-sm', data: { confirm: 'Are you sure?' }%>
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <div class="alert alert-danger" style="text-align: center;"> No Sales Receipt Items Added Yet</div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


</div>

